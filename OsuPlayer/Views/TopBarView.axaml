        <!--            PointerReleased="WindowButtonPressed" -->
        <!--            HorizontalAlignment="Left" Width="24" Height="24" Margin="0 0 5 0"/> -->
        <!--     <Image x:Name="Miniplayer" Cursor="Hand" Source="../Resources/Icons/miniPlayer.png" -->
