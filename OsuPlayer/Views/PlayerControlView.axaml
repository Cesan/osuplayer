<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OsuPlayer.ViewModels"
             xmlns:cv="using:OsuPlayer.Extensions.ValueConverters"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OsuPlayer.Views.PlayerControlView">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/SliderStyle.axaml" />
    </UserControl.Styles>

    <UserControl.Resources>
        <cv:PlayPauseConverter x:Key="PlayPauseConverter" />
        <cv:ShuffleConverter x:Key="ShuffleConverter" />
        <cv:RepeatConverter x:Key="RepeatConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:PlayerControlViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource AcrylicBaseColor}" />
        </Grid.Background>

        <Grid ColumnDefinitions="200, *, 200">
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <DockPanel>
                    <Border Name="Volume" PointerReleased="Volume_OnPointerReleased" Cursor="Hand">
                        <ToolTip.Tip>
                            <TextBlock Text="Click to toggle mute" />
                        </ToolTip.Tip>
                        <Image Height="18" Width="18" Source="../Resources/Icons/max_vol.png" Margin="5 0" />
                    </Border>

                    <Slider Name="VolumeSlider"
                            VerticalAlignment="Center" Minimum="0" Maximum="100" Value="{Binding Volume}" />
                </DockPanel>

                <DockPanel>
                    <Border x:Name="PlaybackSpeed"
                            PointerReleased="PlaybackSpeedBtn_OnPointerReleased" Cursor="Hand">
                        <ToolTip.Tip>
                            <TextBlock Text="Click to reset playback speed" />
                        </ToolTip.Tip>
                        <Image Height="18" Width="18"
                               Source="../Resources/Icons/speed.png" Margin="5 0 5 0" />
                    </Border>
                    <Slider x:Name="PlaybackSpeedSlider" VerticalAlignment="Center"
                            Minimum="32100" Maximum="56100" Value="{Binding PlaybackSpeed}" />
                </DockPanel>
            </StackPanel>

            <DockPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Border x:Name="Favorite" PointerReleased="FavoriteBtn_OnMouseLeftButtonUp">
                    <ToolTip.Tip>
                        <TextBlock Text="Add/Remove song from your current selected playlist." />
                    </ToolTip.Tip>
                    <Image Cursor="Hand" Height="26" Width="26"
                           Source="../Resources/Icons/heart_off.png" Margin="5 0" />
                </Border>

                <Border x:Name="Blacklist" PointerReleased="BlacklistBtn_OnMouseLeftButtonUp">
                    <ToolTip.Tip>
                        <TextBlock Text="Add/Remove song from your blacklist." />
                    </ToolTip.Tip>
                    <Image Cursor="Hand" Height="26" Width="26"
                           Source="../Resources/Icons/blacklist_heart_off.png" />
                </Border>

                <Border x:Name="NavigationSettings" Margin="10 0"
                        PointerReleased="NavigationSettingsBtn_OnMouseLeftButtonUp" Cursor="Hand">
                    <Image Height="32" Width="32"
                           Source="../Resources/Icons/cog.png" />
                </Border>
            </DockPanel>

            <DockPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="CurrentSongTimeText" Text="{Binding CurrentSongTime}" VerticalAlignment="Center"
                           Margin="5"
                           FontFamily="{DynamicResource DroidMono}" />

                <Button Name="Repeat" Width="38" Height="38" CornerRadius="50" Click="SongControl" Background="Transparent">
                    <avalonia:MaterialIcon Kind="{Binding IsRepeating, Converter={StaticResource RepeatConverter}}"
                                           Height="19" Width="19" />
                </Button>

                <Button Name="Previous" Width="38" Height="38" CornerRadius="50" Click="SongControl" Background="Transparent">
                    <avalonia:MaterialIcon Kind="SkipBackward" Height="19" Width="19" />
                </Button>

                <Button Name="PlayPause" Width="50" Height="50" CornerRadius="50" Click="SongControl">
                    <avalonia:MaterialIcon Kind="{Binding IsPlaying, Converter={StaticResource PlayPauseConverter}}"
                                           Height="40" Width="40" />
                </Button>

                <Button Name="Next" Width="38" Height="38" CornerRadius="50" Click="SongControl" Background="Transparent">
                    <avalonia:MaterialIcon Kind="SkipForward" Height="19" Width="19" />
                </Button>

                <Button Name="Shuffle" Width="38" Height="38" CornerRadius="50" Click="SongControl" Background="Transparent">
                    <avalonia:MaterialIcon Kind="{Binding IsShuffle, Converter={StaticResource ShuffleConverter}}"
                                           Height="19" Width="19" />
                </Button>

                <TextBlock Name="CurrentSongTimeLeft" Text="{Binding CurrentSongLength}" VerticalAlignment="Center"
                           HorizontalAlignment="Left" FontFamily="{DynamicResource DroidMono}" Margin="5 0" />
            </DockPanel>
        </Grid>
    </Grid>

</UserControl>