<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:OsuPlayer.Views"
             x:Class="OsuPlayer.App">
    <Application.DataTemplates>
        <views:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <Color x:Key="BaseColor">#FF282C34</Color>
        <Color x:Key="SecondaryColor">#FF21252B</Color>
        <Color x:Key="SpacerColor">#FFFFCC22</Color>
        <Color x:Key="ControlsButtonColor">#FF21252B</Color>
        <Color x:Key="SidemenuButtonsGlow">#FFFFE48A</Color>
        <Color x:Key="ProgressbarColor">#FFFFCC22</Color>
        <Color x:Key="SliderThumbColor">#FFFFFFFF</Color>
        <Color x:Key="ButtonBackgroundColor">#7F000000</Color>

        <SolidColorBrush x:Key="ProgressbarColorBrush" Color="{DynamicResource ProgressbarColor}" />
        <SolidColorBrush x:Key="ButtonBackground" Color="#4C000000" />

        <FontFamily x:Key="Montserrat">/Resources/Fonts/#Montserrat</FontFamily>
        <FontFamily x:Key="Exo2">/Resources/Fonts/#Exo2</FontFamily>
        <FontFamily x:Key="Torus">/Resources/Fonts/#Torus</FontFamily>
        <FontFamily x:Key="NovaMono">/Resources/Fonts/#NovaMono</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Dark" />
    </Application.Styles>
</Application>